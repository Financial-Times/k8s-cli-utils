apiVersion: v1
kind: Config
clusters:
- cluster:
    certificate-authority: /credentials/ca.pem
    server: ${api-server}
  name: k8s-cluster
contexts:
- context:
    cluster: k8s-cluster
    namespace: default
    user: k8s-admin
  name: k8s-context
users:
- name: k8s-admin
  user:
    client-certificate: /credentials/admin.pem
    client-key: /credentials/admin-key.pem
current-context: k8s-context
